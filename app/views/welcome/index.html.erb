                                    <!-- <img> -->
                                    <%= image_tag event.image.url, class: 'attachment-thumbnail wp-post-image' %>
                                    <!-- </img> -->
                                </figure>
                                <div class="col-xs-9">
                                   <h1 class="title-median"><%= event.title %></h1>
                                   <div class="recent-news-text news-summary2">
                                    <p class="sty-event-opportunity">
                                        <%= truncate_html event.description %>                                        
                                    </p>
                                </div> 
                            </div>

                        </div>
                    </li>
                </a>
                <% else %>
                <a href="<%= event_path(event)%>" title="<%= event.title%>" style="width: 100%;height: 100%;display: block;margin:0;" >
                    <li class="sty-spacing-articles news-mini-wrap2">
                        <div class="recent-news-content clearfix">
                            <div class="col-xs-12">
                                <h1 class="title-median"><%= event.title %></h1>
                                <div class="recent-news-text news-summary2">
                                    <p class="sty-article-description">
                                        <%= truncate_html event.description %>    
                                    </p>
                                </div> 
                            </div>
                        </div>
                    </li>
                </a>
                <% end %>
                <% end %>
                   </ul>
                    </li>
            </ul>
  </div>
</div>
</div>
