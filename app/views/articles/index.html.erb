<div class="col-sm-9 col-md-9 col-lg-9 sty-background-default sty-margin-box">
    <!-- <div class="col-padded2"> -->
    <div class="gutter">
        <div class="">
            <h1 class="page-title2">Notícias</h1>
            <div class="category-description">
            </div>
        </div>
    </div>
    <ul class="gutter k-equal-height list-unstyled">
        <% @articles.each do |article| %>
        <li class="news-mini-wrap">
            <a href="<%= article_path(article) %>" title="<%= article.title%>" style="width: 100%;height: 100%;display: block;margin:0;">
                <% if article.image? %>
                <figure class="news-featured-image2 col-xs-2">
                    <img src="<%= article.image.url %>" class="attachment-thumbnail wp-post-image" height="123" width="264" />
                </figure>
                <div class="page-title-meta col-xs-10">
                    <h1 class="page-subtitle"><%= article.title%></h1>
                    <span class="news-date2"><%= article.created_at.strftime("%H:%M")%></span>
                    <div class="news-summary2">
                        <p>
                         <%= truncate_html article.description %>
                        </p>
                    </div>
                </div>
                <% else %>
                <div class="page-title-meta col-xs-12">
                    <h1 class="page-subtitle"><%= article.title%></h1>
                    <span class="news-date2"><%= article.created_at.strftime("%H:%M")%></span>
                    <div class="news-summary2">
                        <p>
                            <%= truncate_html article.description %>
                        </p>
                    </div>
                </div>
                <% end %>
            </a>
            <div class="clear"></div>
            
        </li>
        <% end %>
    </ul>

         <div class="col-sm-12" id="pagination-content" style="margin-top:15px;">
                    <%= will_paginate(@articles) %>
        </div>
