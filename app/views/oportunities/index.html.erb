<div class="col-sm-9 col-md-9 col-lg-9 sty-background-default sty-margin-box">
    <h1 class="page-title">Oportunidades</h1>
    <ul class="list-unstyled">
        <% @oportunities.each do |oportunity| %>
        <a href="<%= oportunity_path(oportunity) %>" title="<%= oportunity.title%>">
            <li class="news-mini-wrap">
                    <% if oportunity.image? %>
                    <figure class="news-featured-image2 col-xs-2">
                        <img src="<%= oportunity.image.url %>" class="attachment-thumbnail wp-post-image" height="123" width="264" />
                    </figure>

                <div class="col-xs-8">
                    <div class="page-title-meta">
                    <h1 class="title-median2">
                                <%= oportunity.title%>
                        </h1>
                        <span class="news-date2">Publicado em <%= oportunity.created_at.strftime("%d/%m/%Y")%></span>
                        <p style="padding-top: 10px; margin-bottom: 0px; color: #333333;"><span class="news-meta-date"><b> <%= oportunity.employer%></span> </b> </p>
                        <div class="news-summary3">
                            <p>
                                <%= truncate_html oportunity.description %>    
                            </p>
                        </div>
                    </div>
                </div>
                <% else %>
                <div class="col-xs-12">
                    <div class="page-title-meta">
                    <h1 class="title-median2">
                                <%= oportunity.title%>
                        </h1>
                        <span class="news-date2">Publicado em <%= oportunity.created_at.strftime("%d/%m/%Y")%></span>
                        <p style="padding-top: 10px; margin-bottom: 0px; color: #333333;"><span class="news-meta-date"><b> <%= oportunity.employer%></span> </b> </p>
                        <div class="news-summary3">
                            <p>
                                  <%= truncate_html oportunity.description %>    
                            </p>
                        </div>
                    </div>
                </div>
                <% end %>
                <div class="clear"></div>
            </li>
        </a>

        <% end %>
    </ul>
    <div class="col-sm-12" id="pagination-content" style="margin-top:15px;">
                    <%= will_paginate(@oportunities) %>
    </div>
    <div class="clear"></div>
</div>
