<div class="col-sm-9 sty-background-default sty-margin-box">
    <div class="gutter">
        <div class="col-lg-12 col-md-12">
            <% if @oportunity.image? %>
            <h1 class="page-title3"><%= @oportunity.title %></h1>
            <figure style="text-align: center;margin-bottom: 30px;">
                <br>
                <%= image_tag @oportunity.image.url, class: 'img-news' %>
            </figure>
            <span class="news-meta-date"> Publicado em <%= @oportunity.created_at.strftime("%d/%m/%Y")%> </span>
            <span class="news-meta-date"><p style="font-size: 16px; margin-bottom: 0px; padding-top: 25px; color: #333333;"><b><%= @oportunity.employer %></b></p></span>
            <div class="news-body2">
                <p class="call-out">
                    <p align="justify">
                        <%= @oportunity.description.html_safe %>
                    </p>
                </p>
            </div>
            <% else %>
            <h1 class="page-title3"><%= @oportunity.title %></h1>
            <span class="news-meta-date"> Publicado em <%= @oportunity.created_at.strftime("%d/%m/%Y")%> </span>
            <span class="news-meta-date"><p style="font-size: 16px; margin-bottom: 0px; padding-top: 25px; color: #333333;"><b><%= @oportunity.employer %></b></p></span>
            <div class="news-body2">
                <p class="call-out">
                    <p align="justify">
                        <%= @oportunity.description.html_safe %>
                    </p>
                </p>
            </div>
            <% end %>
        </div>
    </div>
    <div class="clear"></div>
 </div>
