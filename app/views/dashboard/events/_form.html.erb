<link rel="stylesheet" href="/assets/css/dashboard/dashboard-form.css" media="all">


<div class="row">
    <div class="col-xs-12">
				<%= form_for([:dashboard, @event], :multipart => true, :html => { :class => "form-horizontal form-dashboard"})  do |f| %>
					<section class="widget">
						<%= render "shared/messages", :target => @event %>
 										<header>
                                <span class="icon">&#59160;</span>
                                <hgroup>
                                    <h1>Eventos</h1>
                                    <h2><%= @event.new_record? ? 'Cadastrar novo evento' : 'Modificar evento' %></h2>
                                </hgroup>																
                    </header>
										<div class="content">
												<div class="form-group">
													  <label class="control-label col-sm-4">Título</label>
                            <div class="col-sm-6">
                                <%= f.text_field :title, :class => "form-control" %>
                            </div>
												</div>

												<div class="form-group">
													<label class="control-label col-sm-4">Imagem</label>
													<div class="col-sm-5">
															<%= f.file_field :image, :class => "form-control"%>
													</div>								
												</div>

                      	<div class="form-group">
													<label class="control-label col-sm-4">Local</label>
													<div class="col-sm-5">
															<%= f.text_field :place, :class => "form-control"%>
													</div>								
												</div>

                   	<div class="form-group">
                        <label class="control-label col-sm-4">Data</label>
                       	<div class="col-sm-5">
                          <%= f.text_field :date, :class => "form-control datarangepicker", :start_year => Date.current.year,:end_year => Date.current.year+2, :order => [:day, :month, :year]%>
                        </div>
                      </div>


												<div class="form-group">
													<label class="control-label col-sm-4">Descrição</label>
													<div class="col-sm-8">
															<%= f.text_area :description, :class => "form-control"%>
													</div>								
												</div>
															 <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-4">
                                <%= f.button 'Salvar', class: 'btn btn-warning', type: 'submit' %>
                                <a href="<%= dashboard_events_path %>"><button type="button" class="btn btn-primary">Voltar</button></a>
                            </div>
                         </div>
  
										</div>
						</section>
				<% end %>
		</div>
</div>

